            <MenuItem Key="1">
                <Icon Type="home" />
                <NavLink href="/">Home</NavLink>
            </MenuItem>
        </Menu>
    </Sider>
    <Layout>
        <Header>
            <div style="color: white; font-size: 18px; font-weight: bold;">MedizID</div>
        </Header>
        <Content Style="padding: 24px; background: #f5f5f5;">
            @Body
        </Content>
        <Footer Style="text-align: center;">
            MedizID ©2025 Indonesian Clinic Management and Electronic Medical Record System
        </Footer>
    </Layout>
</Layout>

