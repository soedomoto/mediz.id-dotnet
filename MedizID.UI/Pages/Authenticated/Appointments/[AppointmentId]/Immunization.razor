    private async Task SaveImmunization()
    {
        try
        {
            if (immunizationType == "child" && string.IsNullOrWhiteSpace(form.VaccineName))
            {
                await _notice.Open(new NotificationConfig { NotificationType = NotificationType.Warning, Message = "Vaccine name is required" });
                return;
            }

            if (immunizationType == "adult")
            {
                if (!adultForm.AgeYears.HasValue)
                {
                    await _notice.Warning(new NotificationConfig { Message = "Age is required" });
                    return;
                }
                if (string.IsNullOrWhiteSpace(adultForm.DoctorName))
                {
                    await _notice.Warning(new NotificationConfig { Message = "Doctor name is required" });
                    return;
                }
            }

            isSaving = true;

            if (immunizationType == "child")
            {
                var request = new CreateImmunizationRequest
                {
                    AppointmentId = AppointmentId,
                    DateOfBirth = form.DateOfBirth.HasValue ? new DateTimeOffset(form.DateOfBirth.Value) : null,
                    BirthPlace = form.BirthPlace,
                    Gender = form.Gender,
                    Address = form.Address,
                    BirthWeight = form.BirthWeight,
                    BirthLength = form.BirthLength,
                    FatherName = form.FatherName,
                    FatherOccupation = form.FatherOccupation,
                    MotherName = form.MotherName,
                    MotherOccupation = form.MotherOccupation,
                    DeliveryType = form.DeliveryType,
                    DeliveryPersonnel = form.DeliveryPersonnel,
                    DeliveryPlace = form.DeliveryPlace,
                    ChildNumber = form.ChildNumber,
                    NeonatalVisit1 = form.NeonatalVisit1,
                    NeonatalVisit2 = form.NeonatalVisit2,
                    NeonatalVisit3 = form.NeonatalVisit3,
                    NeonatalVisit4 = form.NeonatalVisit4,
                    BreastfeedingStatus = form.BreastfeedingStatus,
                    VitaminAStatusSixMonths = form.VitaminAStatusSixMonths,
                    VaccineType = form.VaccineType,
                    VaccineName = form.VaccineName,
                    VaccineDate = form.VaccineDate.HasValue ? new DateTimeOffset(form.VaccineDate.Value) : null,
                    DoseNumber = form.DoseNumber,
                    Lot = form.Lot,
                    Route = form.Route,
                    Site = form.Site,
                    Reactions = form.Reactions,
                    ReactionSeverity = form.ReactionSeverity,
                    AgeCategory = form.AgeCategory
                };

                await ApiClient.Api.V1.Immunization.Appointments[AppointmentId].Immunization.PostAsync(request);
            }
            else if (immunizationType == "adult")
            {
                var request = new CreateImmunizationRequest
                {
                    AppointmentId = AppointmentId,
                    ServiceDate = adultForm.ServiceDate.HasValue ? new DateTimeOffset(adultForm.ServiceDate.Value) : null,
                    AgeYears = adultForm.AgeYears,
                    DoctorName = adultForm.DoctorName,
                    NurseName = adultForm.NurseName,
                    VaccineName = adultForm.VaccineName,
                    VaccineDate = adultForm.VaccineDate.HasValue ? new DateTimeOffset(adultForm.VaccineDate.Value) : null,
                    DoseNumber = adultForm.DoseNumber,
                    Lot = adultForm.LotNumber,
                    Route = adultForm.Route,
                    Site = adultForm.Site,
                    Reactions = adultForm.Reactions,
                    ReactionSeverity = adultForm.ReactionSeverity
                };

                await ApiClient.Api.V1.Immunization.Appointments[AppointmentId].Immunization.PostAsync(request);
            }

            await _notice.Success(new NotificationConfig { Message = "Immunization record saved successfully" });
            form = new ImmunizationFormModel { AppointmentId = AppointmentId };
            adultForm = new AdultImmunizationFormModel { AppointmentId = AppointmentId };
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await _notice.Error(new NotificationConfig { Message = $"Error saving immunization: {ex.Message}" });
        }
        finally
        {
            isSaving = false;
        }
    }

