    private List<EnumOption> reactionSeverityOptions = new();

    protected override async Task OnInitializedAsync()
    {
        LayoutState.OnAuthenticationChanged += OnAuthenticationChanged;
        LayoutState.ActiveTabKey = "immunization";
        InitializeEnumOptions();
        form.AppointmentId = AppointmentId;
        adultForm.AppointmentId = AppointmentId;

        if (AppointmentId != Guid.Empty)
        {
            await LoadImmunizationData();
            StateHasChanged();
        }
    }

    private async void OnAuthenticationChanged(bool isAuthenticated)
    {
        if (isAuthenticated && AppointmentId != Guid.Empty)
        {
            await LayoutState.FetchAppointmentAsync(ApiClient, AppointmentId);
            await LoadImmunizationData();
            StateHasChanged();
        }
    }

    private async Task LoadImmunizationData()
    {
        try
        {
            var immunization = await ApiClient.Api.V1.Immunization.Appointments[AppointmentId].Immunization.GetAsync();
            
            if (immunization != null)
            {
                // Determine if it's a child or adult record based on available data
                if (immunization.DateOfBirth.HasValue || !string.IsNullOrEmpty(immunization.FatherName))
                {
                    immunizationType = "child";
                    form = new ImmunizationFormModel
                    {
                        AppointmentId = AppointmentId,
                        DateOfBirth = immunization.DateOfBirth?.DateTime,
                        BirthPlace = immunization.BirthPlace,
                        Gender = immunization.Gender,
                        Address = immunization.Address,
                        BirthWeight = immunization.BirthWeight,
                        BirthLength = immunization.BirthLength,
                        FatherName = immunization.FatherName,
                        FatherOccupation = immunization.FatherOccupation,
                        MotherName = immunization.MotherName,
                        MotherOccupation = immunization.MotherOccupation,
                        DeliveryType = immunization.DeliveryType,
                        DeliveryPersonnel = immunization.DeliveryPersonnel,
                        DeliveryPlace = immunization.DeliveryPlace,
                        ChildNumber = immunization.ChildNumber,
                        NeonatalVisit1 = immunization.NeonatalVisit1,
                        NeonatalVisit2 = immunization.NeonatalVisit2,
                        NeonatalVisit3 = immunization.NeonatalVisit3,
                        NeonatalVisit4 = immunization.NeonatalVisit4,
                        BreastfeedingStatus = immunization.BreastfeedingStatus,
                        VitaminAStatusSixMonths = immunization.VitaminAStatusSixMonths,
                        VaccineType = immunization.VaccineType,
                        VaccineName = immunization.VaccineName,
                        VaccineDate = immunization.VaccineDate?.DateTime,
                        DoseNumber = immunization.DoseNumber,
                        Lot = immunization.Lot,
                        Route = immunization.Route,
                        Site = immunization.Site,
                        Reactions = immunization.Reactions,
                        ReactionSeverity = immunization.ReactionSeverity,
                        AgeCategory = immunization.AgeCategory
                    };
                }
                else if (immunization.AgeYears.HasValue)
                {
                    immunizationType = "adult";
                    adultForm = new AdultImmunizationFormModel
                    {
                        AppointmentId = AppointmentId,
                        ServiceDate = immunization.ServiceDate?.DateTime,
                        AgeYears = immunization.AgeYears,
                        DoctorName = immunization.DoctorName,
                        NurseName = immunization.NurseName,
                        VaccineName = immunization.VaccineName,
                        VaccineDate = immunization.VaccineDate?.DateTime,
                        DoseNumber = immunization.DoseNumber,
                        LotNumber = immunization.Lot,
                        Route = immunization.Route,
                        Site = immunization.Site,
                        Reactions = immunization.Reactions,
                        ReactionSeverity = immunization.ReactionSeverity
                    };
                }
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            // Silently fail if no immunization records exist yet
            System.Diagnostics.Debug.WriteLine($"Error loading immunization data: {ex.Message}");
        }
    }

