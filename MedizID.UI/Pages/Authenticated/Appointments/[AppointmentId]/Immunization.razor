                        Placeholder="Select Age Category" />
            </div>
            <div>
                <label>Vaccine Type</label>
                <Select TItemValue="int?" TItem="EnumOption"
                        @bind-Value="form.VaccineType"
                        DataSource="vaccineTypeOptions"
                        ValueName="Value"
                        LabelName="Label"
