@using Blazored.LocalStorage
@using MedizID.UI
@using AntDesign
@inject ILocalStorageService LocalStorage

<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@AdditionalAssemblies">
    <Found Context="routeData">
        @if (isAuthenticated)
        {
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(AuthenticatedLayout)" />
        }
        else
        {
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(UnauthenticatedLayout)" />
        }
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        @if (isAuthenticated)
        {
            <LayoutView Layout="@typeof(AuthenticatedLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        }
        else
        {
            <LayoutView Layout="@typeof(UnauthenticatedLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        }
    </NotFound>
</Router>

<AntContainer />

@code {
    private bool isAuthenticated = false;
    private Assembly[] AdditionalAssemblies = new[] { typeof(MedizID.UI._Imports).Assembly };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            isAuthenticated = !string.IsNullOrEmpty(token);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking authentication: {ex.Message}");
        }
    }
}
