@page "/login"
@using MedizID.Web.Services
@using MedizID.Web.Models
@implements IAsyncDisposable
@inject IAuthenticationService AuthService
@inject IGoogleAuthService GoogleAuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="min-h-screen bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-2xl p-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center">mediz.id</h1>
            <p class="text-gray-600 text-center mb-6">Indonesian Clinic Management System</p>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
                    @errorMessage
                </div>
            }

            <EditForm Model="loginRequest" OnSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                    <InputText id="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" 
                              @bind-Value="loginRequest.Email" placeholder="you@example.com" />
                    <ValidationMessage For="@(() => loginRequest.Email)" class="text-red-600 text-sm" />
                </div>

                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
                    <InputText id="password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" 
                              @bind-Value="loginRequest.Password" placeholder="••••••••" />
                    <ValidationMessage For="@(() => loginRequest.Password)" class="text-red-600 text-sm" />
                </div>

                <button type="submit" disabled="isLoading" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 disabled:opacity-50">
                    @if (isLoading)
                    {
                        <span>Logging in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </EditForm>

            <!-- Google OAuth Button -->
            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Or continue with</span>
                    </div>
                </div>

                <button type="button" 
                        @onclick="InitializeGoogleSignIn"
                        disabled="isLoading"
                        class="mt-4 w-full flex items-center justify-center gap-3 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition duration-200 disabled:opacity-50">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Google</span>
                </button>
            </div>

            <div class="mt-6 text-center">
                <p class="text-gray-600">Don't have an account? <a href="/register" class="text-blue-600 hover:underline font-medium">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Google Sign-In Script -->
<script src="https://accounts.google.com/gsi/client" async defer></script>
<script src="js/google-signin.js"></script>
<div id="g_id_onload"
     data-client_id="YOUR_GOOGLE_CLIENT_ID"
     data-callback="handleCredentialResponse"
     style="display: none;">
</div>

@code {
    private LoginRequest loginRequest = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private DotNetObjectReference<Login>? objRef;

    protected override async Task OnInitializedAsync()
    {
        // Create .NET object reference for JS interop
        objRef = DotNetObjectReference.Create(this);
        
        // Wait a moment for Google script to load
        await Task.Delay(500);
        
        // Initialize Google Sign-In after script is loaded
        await JS.InvokeVoidAsync("initializeGoogleSignIn");
    }

    [JSInvokable]
    public async Task HandleGoogleSignIn(string idToken)
    {
        errorMessage = string.Empty;
        isLoading = true;

        try
        {
            // Call Google auth service to exchange token
            var result = await GoogleAuthService.LoginWithGoogleAsync(idToken);
            
            if (result)
            {
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = "Google Sign-In failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Google Sign-In error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        isLoading = true;

        try
        {
            var result = await AuthService.LoginAsync(loginRequest.Email, loginRequest.Password);
            if (result)
            {
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = "Invalid email or password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Login error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task InitializeGoogleSignIn()
    {
        try
        {
            // Trigger Google Sign-In prompt
            await JS.InvokeVoidAsync("triggerGoogleSignIn");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to initialize Google Sign-In: {ex.Message}";
        }
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        if (objRef is not null)
        {
            objRef.Dispose();
            await Task.CompletedTask;
        }
    }
}
