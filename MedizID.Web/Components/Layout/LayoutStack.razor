@* LayoutStack.razor
 * Equivalent to Mantine's Stack component
 * Creates vertical flexbox layout with configurable gap and alignment
 * Used for stacking components vertically with consistent spacing
 *@

<div class="mud-layout-stack" style="@GetStyles()">
    @ChildContent
</div>

@code {
    /// <summary>Gap between child elements (CSS units: rem, px, em, etc.)</summary>
    [Parameter]
    public string Gap { get; set; } = "1rem";

    /// <summary>CSS align-items property</summary>
    [Parameter]
    public string AlignItems { get; set; } = "stretch";

    /// <summary>CSS justify-content property</summary>
    [Parameter]
    public string JustifyContent { get; set; } = "flex-start";

    /// <summary>Additional CSS classes to apply</summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>Inline styles to apply</summary>
    [Parameter]
    public string? Style { get; set; }

    /// <summary>Child content to render inside the stack</summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private string GetStyles()
    {
        var styles = new System.Text.StringBuilder();
        styles.Append("display: flex;");
        styles.Append("flex-direction: column;");
        styles.Append($"gap: {Gap};");
        styles.Append($"align-items: {AlignItems};");
        styles.Append($"justify-content: {JustifyContent};");

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Append(Style);
        }

        return styles.ToString();
    }
}

<style>
    .mud-layout-stack {
        width: 100%;
    }
</style>
