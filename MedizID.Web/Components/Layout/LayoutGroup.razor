@* LayoutGroup.razor
 * Equivalent to Mantine's Group component
 * Creates horizontal flexbox layout with configurable gap and alignment
 * Used for grouping items horizontally with consistent spacing
 *@

<div class="mud-layout-group" style="@GetStyles()">
    @ChildContent
</div>

@code {
    /// <summary>Gap between child elements (CSS units: rem, px, em, etc.)</summary>
    [Parameter]
    public string Gap { get; set; } = "1rem";

    /// <summary>CSS align-items property (vertical alignment)</summary>
    [Parameter]
    public string AlignItems { get; set; } = "center";

    /// <summary>CSS justify-content property (horizontal alignment)</summary>
    [Parameter]
    public string JustifyContent { get; set; } = "flex-start";

    /// <summary>Whether to wrap items (flex-wrap: wrap)</summary>
    [Parameter]
    public bool Wrap { get; set; } = true;

    /// <summary>Additional CSS classes to apply</summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>Inline styles to apply</summary>
    [Parameter]
    public string? Style { get; set; }

    /// <summary>Child content to render inside the group</summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private string GetStyles()
    {
        var styles = new System.Text.StringBuilder();
        styles.Append("display: flex;");
        styles.Append("flex-direction: row;");
        styles.Append($"gap: {Gap};");
        styles.Append($"align-items: {AlignItems};");
        styles.Append($"justify-content: {JustifyContent};");
        styles.Append($"flex-wrap: {(Wrap ? "wrap" : "nowrap")};");

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Append(Style);
        }

        return styles.ToString();
    }
}

<style>
    .mud-layout-group {
        width: 100%;
    }
</style>
