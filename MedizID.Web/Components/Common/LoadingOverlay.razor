@* LoadingOverlay.razor
 * Displays a loading overlay on top of content
 * Similar to Mantine's LoadingOverlay component
 * Used to prevent user interaction during async operations
 *@

@if (IsVisible)
{
    <div class="mud-loading-overlay">
        <div class="mud-loading-overlay-background"></div>
        <div class="mud-loading-overlay-content">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
            @if (!string.IsNullOrEmpty(Message))
            {
                <MudText Typo="Typo.body2" Class="mt-3">@Message</MudText>
            }
        </div>
    </div>
}

@code {
    /// <summary>Whether the loading overlay is visible</summary>
    [Parameter]
    public bool IsVisible { get; set; } = false;

    /// <summary>Loading message to display below the spinner</summary>
    [Parameter]
    public string? Message { get; set; }
}

<style>
    .mud-loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1300;
    }

    .mud-loading-overlay-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .mud-loading-overlay-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }
</style>
