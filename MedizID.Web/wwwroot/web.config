<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Redirect to https" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    <staticContent>
      <!-- WASM files - cache for 1 year with content hash versioning -->
      <mimeType extension=".wasm" type="application/wasm" />
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="31536000" />
      
      <!-- JavaScript - cache for 1 day -->
      <clientCache extension=".js" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="86400" />
      
      <!-- CSS - cache for 1 day -->
      <clientCache extension=".css" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="86400" />
      
      <!-- Images - cache for 30 days -->
      <clientCache extension=".png" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="2592000" />
      <clientCache extension=".jpg" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="2592000" />
      <clientCache extension=".jpeg" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="2592000" />
      <clientCache extension=".gif" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="2592000" />
      <clientCache extension=".svg" cacheControlMode="UseMaxAge" cacheControlMaxAgeSeconds="2592000" />
    </staticContent>
    <httpProtocol>
      <customHeaders>
        <!-- Security headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!-- WASM requires proper CORS headers -->
        <add name="Cross-Origin-Opener-Policy" value="same-origin" />
        <add name="Cross-Origin-Embedder-Policy" value="require-corp" />
      </customHeaders>
    </httpProtocol>
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
  </system.webServer>
</configuration>
